<div class="page-header">
  <h3>Item #<%= @item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Item name</dt>
      <dd><%= @item.item_name %></dd>

      <dt>Quantity wanted</dt>
      <dd><%= @item.quantity_wanted %></dd>

      <dt>Item url</dt>
      <dd><%= @item.item_url %></dd>

      <dt>Vendor</dt>
      <dd><%= @item.vendor_id %></dd>

      <dt>Image url</dt>
      <dd><%= @item.image_url %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/items" class="btn btn-primary">
        Back
      </a>
      <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_item/<%= @item.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
